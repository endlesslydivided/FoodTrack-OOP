                            <TextBlock
                                Grid.Row="2"
                                Grid.ColumnSpan="2"
                                Margin="5"
                                VerticalAlignment="Center"
                                FontFamily="Samsung Sharp Sans"
                                FontSize="13"
                                Text="FullName:" />

                            <Grid
                                Grid.Row="2"
                                Grid.Column="5"
                                Grid.ColumnSpan="3"
                                Margin="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*" />

                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>
                                <Button
                                    Margin="3"
                                    Command="{Binding SaveUsersDatumCommand}"
                                    Content="Сохранить"
