                                FontSize="12"
                                Text="IdData:" />
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="2"
                                Margin="5"
                                VerticalAlignment="Center"
                                FontFamily="Samsung Sharp Sans"
                                Style="{DynamicResource MahApps.Styles.TextBlock}"
