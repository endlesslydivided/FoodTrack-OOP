                </Grid>
            </mah:FlipViewItem>
            <mah:FlipViewItem>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="143*" />
                        <RowDefinition Height="68*" />
                    </Grid.RowDefinitions>
                    <DataGrid
                        Margin="10,10,10,10"
                        IsReadOnly="True"
                        ItemsSource="{Binding UsersParamTableToShow}"
                        SelectedItem="{Binding LastSelectedUserParam}" />

                    <Border
                        Grid.Row="1"
                        Margin="2,2,2,2"
                        Background="{DynamicResource MahApps.Brushes.ThemeBackground}"
                        CornerRadius="15">
                        <Grid Margin="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*" />
                                <RowDefinition Height="1*" />
                                <RowDefinition Height="1*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="42*" />
                                <ColumnDefinition Width="43*" />
                                <ColumnDefinition Width="139*" />
                                <ColumnDefinition Width="70*" />
                                <ColumnDefinition Width="182*" />
                                <ColumnDefinition Width="134*" />
                                <ColumnDefinition Width="74*" />
                                <ColumnDefinition Width="74*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Margin="5"
                                VerticalAlignment="Center"
                                FontFamily="Samsung Sharp Sans"
                                Text="Id:" />
                            <TextBlock
                                Grid.Column="1"
                                Grid.ColumnSpan="2"
                                Margin="5"
                                VerticalAlignment="Center"
                                FontFamily="Samsung Sharp Sans"
                                Text="{Binding LastSelectedUserParam.Id}" />

                            <TextBlock
                                Grid.Row="1"
                                Grid.ColumnSpan="2"
                                Margin="5"
                                VerticalAlignment="Center"
                                FontFamily="Samsung Sharp Sans"
                                FontSize="12"
                                Text="IdParam:" />
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="2"
                                Margin="5"
                                VerticalAlignment="Center"
                                FontFamily="Samsung Sharp Sans "
                                Style="{DynamicResource MahApps.Styles.TextBlock}"
                                Text="{Binding LastSelectedUserParam.IdParams}" />

                            <TextBlock
                                Grid.Row="2"
                                Grid.ColumnSpan="2"
                                Margin="5"
                                VerticalAlignment="Center"
                                FontFamily="Samsung Sharp Sans"
                                FontSize="11"
                                Text="UserWeight:" />

                            <mah:NumericUpDown
                                Grid.Row="2"
                                Grid.Column="2"
                                Margin="5"
                                VerticalAlignment="Center"
                                mah:NumericInputMode="Decimal"
                                mah:ParsingNumberStyle="AllowDecimalPoint"
                                mah:TextBoxHelper.Watermark="Кг"
                                Maximum="300"
                                Minimum="1"
                                Value="{Binding LastSelectedUserParam.UserWeight}" />

                            <Grid
                                Grid.Row="2"
                                Grid.Column="4"
                                Grid.ColumnSpan="4"
                                Margin="1,1,1,1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>
                                <Button
                                    Margin="3"
                                    Command="{Binding SaveUserParamCommand}"
                                    Content="Сохранить"
                                    FontFamily="SamsungOne 400"
                                    FontSize="7"
                                    FontWeight="Light" />
                                <Button
                                    Grid.Column="1"
                                    Margin="3"
                                    Command="{Binding DeleteUserParamCommand}"
                                    Content="Удалить"
                                    FontFamily="SamsungOne 400"
                                    FontSize="7"
                                    FontWeight="Light" />
                                <Button
                                    Grid.Column="2"
                                    Margin="3"
                                    Command="{Binding CleanUserParamCommand}"
                                    Content="Очистить поля"
                                    FontFamily="SamsungOne 400"
                                    FontSize="7"
                                    FontWeight="Light" />
                            </Grid>
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="3"
                                Margin="5"
                                VerticalAlignment="Center"
                                FontFamily="Samsung Sharp Sans"
                                FontSize="9"
                                Text="ParamsDate:" />
                            <DatePicker
                                Grid.Row="1"
                                Grid.Column="4"
                                Margin="5"
                                VerticalAlignment="Center"
                                FontFamily="Samsung Sharp Sans"
                                FontWeight="Normal"
                                SelectedDate="{Binding LastSelectedUserParam.ParamsDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <TextBlock
                                Grid.Column="3"
                                Margin="5"
                                VerticalAlignment="Center"
                                FontFamily="Samsung Sharp Sans"
                                FontSize="10"
                                Text="UserHeight:" />
                            <mah:NumericUpDown
                                Grid.Column="4"
                                Margin="5"
                                VerticalAlignment="Center"
                                mah:NumericInputMode="Numbers"
                                mah:ParsingNumberStyle="Integer"
                                mah:TextBoxHelper.Watermark="См"
                                Maximum="300"
                                Minimum="1"
                                Value="{Binding LastSelectedUserParam.UserHeight}" />
                        </Grid>
                    </Border>
                </Grid>
            </mah:FlipViewItem>
        </mah:FlipView>

    </Grid>
</UserControl>
