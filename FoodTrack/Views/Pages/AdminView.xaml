                                FontFamily="SamsungOne 400"
                                FontSize="10"
                                Style="{DynamicResource MahApps.Styles.TextBox}"
                                Text="{Binding LastSelectedUsersDatum.FullName}" />
                            <TextBlock
                                Grid.Column="3"
                                Margin="5"
                                VerticalAlignment="Center"
                                FontFamily="Samsung Sharp Sans"
                                FontSize="12"
                                Text="BirthDay:" />
                            <DatePicker
                                Grid.Column="4"
                                Margin="5,0,5,0"
                                VerticalAlignment="Center"
                                FontFamily="Samsung Sharp Sans"
                                FontWeight="Normal"
                                SelectedDate="{Binding LastSelectedUsersDatum.Birthday, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
